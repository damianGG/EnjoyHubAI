# Cloudinary Configuration
# Sign up at https://cloudinary.com and get your credentials from the Dashboard
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# SMS Configuration for Phone Authentication
# Note: Supabase handles SMS sending through configured providers
# Configure in Supabase Dashboard > Authentication > Phone Auth
# Supported providers: Twilio, MessageBird, Textlocal, Vonage
# For SMSApi.pl integration, you may need to use a custom provider or webhook
NEXT_PUBLIC_ENABLE_PHONE_AUTH=true

# Email Service Configuration (for booking notifications)
# Example with Resend (recommended for Next.js)
# RESEND_API_KEY=re_xxxxxxxxxxxxx

# SMS Service Configuration (for booking notifications)
# Example with Twilio
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=xxxxxxxxxxxxx
# TWILIO_PHONE_NUMBER=+1234567890

# Cron Job Security
# Generate a secure random token for the cron endpoint
CRON_SECRET=your_secure_random_token_here
